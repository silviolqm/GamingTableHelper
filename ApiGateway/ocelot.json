{
    "GlobalConfiguration":{
        "BaseUrl": "https://localhost:7000"
    },
    "Routes": [
        {
            "UpstreamPathTemplate": "/gateway/auth",
            "UpstreamHttpMethod": "POST",
            "DownstreamPathTemplate": "/api/auth",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7001
                }
            ]
        },
        {
            "UpstreamPathTemplate": "/gateway/exemplo",
            "UpstreamHttpMethod": "GET",
            "DownstreamPathTemplate": "/api/exemplo",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7002
                }
            ],
            "RateLimitOptions":{
                "EnableRateLimiting": true,
                "Period": "20s",
                "Limit": 5,
                "PeriodTimespan": 30
            },
            "AuthenticationOptions":{
                "AuthenticationProviderKeys": [ "Bearer" ],
                "AllowedScopes": []
            }
        }
    ]
}